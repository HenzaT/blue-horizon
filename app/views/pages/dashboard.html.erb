<div class="mx-5">
  <h1>Welcome back, <%= current_user.name %></h1>
</div>

<div class="container border-bottom" id="your-yachts">
  <h1 class="d-flex justify-content-center text-align-center">Your Yachts</h1>
  <div class="row g-5 my-4">
    <% if current_user.yachts.length > 0 %>
      <% current_user.yachts.each do |yacht| %>
        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12">
          <%= link_to yacht_path(yacht), class: "text-decoration-none text-black" do %>
            <div class="card" style="width: 18rem;">
              <% if yacht.photo.attached? %>
                <%= cl_image_tag(yacht.photo.key, class:"card-img-top") %>
              <% end %>
                <div class="card-body d-flex flex-row justify-content-between align-items-center">
                  <div class="d-flex flex-row align-items-center">
                    <h5 class="card-title"><%= yacht.name %></h5>
                    <a href="#" class="p-0 m-0"><i class="fa-regular fa-heart"></i></a>
                  </div>
                  <%# <a href="#" class="btn btn-primary">Rent</a> %>
                </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>You don't have any yachts yet</p>
    <% end %>
  </div>
</div>

<div class="container my-5" id="your-bookings">
  <h1 class="d-flex justify-content-center text-align-center">Your bookings</h1>
  <div class="row g-5 my-4">
    <% if @user_bookings.length > 0 %>
      <% @user_bookings.each do |booking| %>
        <%# if booking.user_id == current_user.id %>
          <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12">
            <div class="card" style="width: 18rem;">
              <div class="card-body align-items-center">
                <h2>Your stay on: </h2>
                <h2>
                  <strong><%= booking.yacht.name %></strong>
                </h2>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-flex flex-column">
                    <div><h5 class="card-title">Check-in: </h5></div>
                    <div><i><%= booking.start_date.strftime("%b %e, %Y") %></i></div>
                  </div>
                  <div class="d-flex flex-column">
                    <div><h5 class="card-title">Checkout: </h5></div>
                    <div><i><%= booking.end_date.strftime("%b %e, %Y") %></i></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    <% else %>
      <p>You don't have any bookings yet</p>
    <% end %>
</div>
