    </div>
  </div>
</div>





<div class="container text-center">
  <h1 class="my-5" id= "yacht_home" >Our Yachts</h1>
  <div class="row g-5 d-flex justify-content-between">
    <% @threeYachts.each do |yacht| %>
      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12">
        <%= link_to yacht_path(yacht), class: "text-decoration-none text-black" do %>
          <div class="card rounded-3 h-100" style="width: 18rem;">
            <% if yacht.photo.attached? %>
              <%= cl_image_tag(yacht.photo.key, class:"card-img-top img-fluid") %>
            <% end %>
            <div class="card-body d-flex flex-row justify-content-between align-items-center">
              <div>
                <h5 class="card-title mb-0"><%= yacht.name.titleize %></h5>
                <p class="card-title mb-0"><%= yacht.address %></p>
              </div>
              <div>
                <h6 class="mb-0">Â£<%= yacht.price %></h6>
                <p class="mb-0">per day</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

<div class="container d-flex flex-row justify-content-center align-items-center my-5">
  <div class="rounded-4" style="width: 100%; height: 400px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
