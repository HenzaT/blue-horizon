<div class="container">
  <div class="card-category" style="background-image:
    url(<%= cl_image_path(@yacht.photo.key) %>),
    url(<%= cl_image_path(@yacht.photo.key) %>),
    url(<%= cl_image_path(@yacht.photo.key) %>);
    background-position: left top, 60%, right top;
    background-size: 45% 100%, 25% 100%, 30% 100%;
    background-repeat: no-repeat, no-repeat, no-repeat;
    height: 400px;">
  </div>

  <div class="border-bottom">
    <h5>Hosted by</h5>
    <%= @user.name.capitalize  %>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="text-center"><%= @yacht.name %></h1>
        <p><%= @yacht.description%></p>
        <p>Price: Â£<%= @yacht.price%> per day</p>
      </div>

      <div  class="col">
        <h3>Key Features:</h3>
          <ul class="fa-ul">
            <li><span class="fa-li"><i class="fa-solid fa-check"></i></span><%= @yacht.name%></li>
            <li><span class="fa-li"><i class="fa-solid fa-check"></i></span><%= @yacht.model%></li>
            <li><span class="fa-li"><i class="fa-solid fa-check"></i></span><%= @yacht.size%></li>
          </ul>
      </div>

      <div class="col">
        <%= simple_form_for [@yacht, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.submit "Make a booking", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
