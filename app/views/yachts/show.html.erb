<div class="container">
  <div class="card-category" style="background-image:
    url(<%= cl_image_path(@yacht.photo.key) %>),
    url(<%= cl_image_path(@yacht.photo.key) %>),
    url(<%= cl_image_path(@yacht.photo.key) %>);
    background-position: left top, 60%, right top;
    background-size: 45% 100%, 25% 100%, 30% 100%;
    background-repeat: no-repeat, no-repeat, no-repeat;
    height: 400px;">
  </div>

  <div class="border-bottom">
    <h5>Hosted by</h5>
    <%= @user.email  %>
  </div>

  <div class="row">
    <div class="col-4">
      <p>Yacht description:
        <%= @yacht.description%>
      </p>
    </div>

    <div  class="col-4">
      <h3>Key Features:</h3>
        <ul>
          <li><%= @yacht.name%></li>
          <li><%= @yacht.model%></li>
          <li><%= @yacht.size%></li>
        </ul>
    </div>

    <div>
      <%= simple_form_for [@yacht, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit "Make a booking", class: "btn btn-primary" %>
      <% end %>
    </div>


  </div>
</div>
