<div class="container text-center">
  <h1 class="my-5">Yachts</h1>
  <div class="row g-5">
    <% @yachts.each do |yacht| %>
      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12">
        <%= link_to yacht_path(yacht), class: "text-decoration-none text-black" do %>
          <div class="card rounded-3 h-100" style="width: 18rem;">
            <% if yacht.photo.attached? %>
              <%= cl_image_tag(yacht.photo.key, class:"card-img-top img-fluid") %>
            <% end %>
            <div class="card-body d-flex flex-row justify-content-between align-items-center">
              <h5 class="card-title mb-0"><%= yacht.name.capitalize %></h5>
              <div>
                <h6 class="mb-0">Â£<%= yacht.price %></h6>
                <p class="mb-0">per day</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex flex-row justify-content-around align-item-center my-5 py-3" style="width: 100vw; background-color: #FCE12D" id="trusts-banner">
  <h3 class="mb-0">Curated Selection</h3>
  <h3 class="mb-0">Owner we trust</h3>
  <h3 class="mb-0">Rated excellent on TrustPilot</h3>
</div>
