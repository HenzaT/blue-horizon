<div class="container text-center">
  <h1 class="my-5">All Yachts</h1>
  <div class="row g-5">
    <% @yachts.each do |yacht| %>
      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12">
        <%= link_to yacht_path(yacht), class: "text-decoration-none text-black" do %>
          <div class="card" style="width: 18rem;">
            <% if yacht.photo.attached? %>
              <%= cl_image_tag(yacht.photo.key, class:"card-img-top") %>
            <% end %>
            <div class="card-body d-flex flex-row justify-content-between align-items-center">
              <div class="d-flex flex-row align-items-center">
                <h5 class="card-title"><%= yacht.name %></h5>
                <a href="#" class="p-0 m-0"><i class="fa-regular fa-heart"></i></a>
              </div>
              <a href="#" class="btn btn-primary">Rent</a>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex flex-row justify-content-around align-item-center my-5 py-3" style="width: 100vw; background-color: #dfe1ed" id="trusts-banner">
  <h3>Curated Selection</h3>
  <h3>Owner we trust</h3>
  <h3>Rated excellent on TrustPilot</h3>
</div>
